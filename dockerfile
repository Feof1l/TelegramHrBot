# Используем официальный образ Golang как базовый образ
FROM golang:latest

# Устанавливаем переменную окружения GOPATH
ENV GOPATH /go

# Копируем все файлы проекта в рабочую директорию контейнера
COPY . /go/src/PmiiHRbot

# Устанавливаем рабочую директорию
WORKDIR /go/src/PmiiHRbot

# Устанавливаем зависимости проекта
RUN go mod download

# Собираем исполняемый файл
RUN go build ./cmd/bot/main.go

# Определяем команду, которая будет запущена при старте контейнера
CMD ["./main"]